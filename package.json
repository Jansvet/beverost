{
  "name": "beverost",
  "version": "1.0.1-beta.1",
  "description": "Beverost, the Better Server Boost. A Node.js toolkit for server development with structured logging, custom errors, and API utilities.",
  "main": "dist/cjs/src/index.cjs",
  "module": "dist/mjs/src/index.mjs",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/src/index.cjs",
      "import": "./dist/mjs/src/index.mjs",
      "types": "./dist/types/src/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest --forceExit",
    "build": "npm run build:cjs && npm run build:mjs && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "lint": "eslint .",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build",
    "start": "node dist/cjs/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "coverage": "jest --coverage",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "better",
    "server",
    "boost",
    "nodejs",
    "typescript",
    "development"
  ],
  "author": "Jansvet",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^4.3.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "winston": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jansvet/beverost.git"
  },
  "bugs": {
    "url": "https://github.com/Jansvet/beverost/issues"
  },
  "homepage": "https://github.com/Jansvet/beverost#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "tsconfig": "./tsconfig.json"
}
